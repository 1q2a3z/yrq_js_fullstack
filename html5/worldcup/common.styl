.matchCourse
    width 1300px
    height 233px
    margin auto
    background url(//img.alicdn.com/tfs/TB12dYwxFOWBuNjy0FiXXXFxVXa-288-80.png) center 0 no-repeat
    background-size: 144px 40px
    margin-bottom 50px
.matchContent
    width 1300px
    height 112px
    overflow hidden
    padding-top 60px
    .match-item
        cursor pointer
        width 321px
        height 112px
        background-color #562aab
        float left   
        position relative
        box-sizing border-box
        margin-right 4px
        background: url(//img.alicdn.com/tfs/TB13NdxwTtYBeNjy1XdXXXXyVXa-644-224.png) center 0 no-repeat
        .title
            height 12px
            overflow hidden
            font-size 12px
            color #DFC798
            letter-spacing 0
            text-align center
            line-height 12px
            margin-top 12px
            margin-bottom 12px
        .match-info
            position relative
            height 76px
            text-align center
            overflow: hidden
            user-select: none
            .left-team
                width 35%
                float left
                .badge img
                    width 31.1px
                    height 31.8px
                    margin auto
                    padding-bottom 9px
                .leftTeam-name
                        font-size 12px
                        color #FFF
                        text-align center
                        line-height 12px
            .match-desc
                float left
                width 30%
                margin-top 10px
                color #fff
                font-size 12px
                line-height 12px
                margin-bottom 13px
                .statusButton
                    cursor pointer
                    .reback
                        background #148AFF
                        box-shadow 0 0 4px 0 rgba(0,0,0,.3)
                        border-radius 100px  
                        width 80px
                        height 24px
                        display inline-block
                        line-height 24px
                        margin-top 16px
                        padding-right 5px
                        img 
                            vertical-align middle
                        
                            
            .right-team
                width 112px
                float right
                .badge img
                    width 31.1px
                    height 31.8px
                    margin auto
                    padding-bottom 9px
                .rightTeam-name
                        font-size 12px
                        color #FFF
                        line-height 12px
